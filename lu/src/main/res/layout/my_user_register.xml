<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/my_user_reg" layout="@layout/my_base_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#08000000"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/my_register_icon"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:text="美团帐号登录"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="用户名 :"
            android:textSize="16sp"
            android:padding="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_username_edit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="start"
            android:textColor="#000000"
            android:hint="邮箱/手机号/用户名"
            android:textColorHint="#22000000"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_user_del"
            />
    </LinearLayout>
    <View
        android:background="#33000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="密    码 :"
            android:textSize="16sp"
            android:padding="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_userpsd_edit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="start"
            android:textColor="#000000"
            android:hint="密码"
            android:textColorHint="#22000000"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_user_del"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:background="#08000000"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_login_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="@drawable/ib_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_user_register"
                android:text="立即注册"
                android:layout_marginTop="18dp"
                android:layout_alignLeft="@+id/tv_login_button"
                android:layout_below="@id/tv_login_button"
                android:textColor="#ffaa00"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_quick_login"
                android:layout_marginTop="18dp"
                android:layout_alignRight="@+id/tv_login_button"
                android:layout_below="@id/tv_login_button"
                android:text="手机号快捷登陆"
                android:drawableRight="@drawable/my_personal2"
                android:textColor="#ffaa00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_weixin_login"
                android:layout_marginRight="10dp"
                android:src="@drawable/login_xt"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/iv_qq_login"
                android:layout_marginRight="10dp"
                android:src="@drawable/login_xj"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/iv_xinlang_login"
                android:layout_marginRight="10dp"
                android:src="@drawable/login_xn"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/iv_qqz_login"
                android:src="@drawable/login_xl"
                android:layout_width="40dp"
                android:layout_height="40dp" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>